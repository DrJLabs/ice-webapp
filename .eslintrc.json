{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [],
  "rules": {},
  "overrides": [
    {
      "files": ["scripts/**/*.js", "scripts/**/*.mjs"],
      "env": {
        "node": true,
        "es6": true,
        "browser": false
      },
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "script"
      },
      "globals": {
        "require": "readonly",
        "process": "readonly",
        "__dirname": "readonly",
        "__filename": "readonly",
        "console": "readonly",
        "module": "readonly",
        "exports": "readonly",
        "Buffer": "readonly",
        "global": "readonly"
      },
      "rules": {
        "no-undef": "error",
        "no-unused-vars": "warn"
      }
    }
  ]
} 